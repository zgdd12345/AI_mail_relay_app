# ========================================
# IMAP 邮箱配置（用于接收 arXiv 邮件）
# ========================================
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your_email@gmail.com
IMAP_PASSWORD=your_gmail_app_password
IMAP_FOLDER=INBOX

# ========================================
# 邮件过滤配置
# ========================================
# 发件人过滤（arXiv 官方邮箱）
MAIL_SENDER_FILTER=no-reply@arxiv.org

# 主题关键词过滤（逗号分隔）
MAIL_SUBJECT_KEYWORDS=arXiv,Daily,digest

# ========================================
# SMTP 邮箱配置（用于转发摘要邮件）
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_USE_TLS=true

# 转发邮件的发件人和收件人
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_TO_ADDRESS=your_email@gmail.com

# ========================================
# LLM 大模型配置
# ========================================
# 提供商选择: openai / deepseek / claude / anthropic / qwen / bytedance
LLM_PROVIDER=deepseek

# API 密钥（必填）
LLM_API_KEY=your_llm_api_key_here

# 模型名称
LLM_MODEL=deepseek-chat
# 常用模型示例:
# OpenAI: gpt-4o-mini, gpt-4o, gpt-4-turbo
# DeepSeek: deepseek-chat
# Claude: claude-3-5-sonnet-20241022, claude-3-haiku-20240307
# Qwen: qwen-plus, qwen-turbo, qwen-max
# ByteDance: ep-xxxxxxxx-xxxxx (需要替换为你的实际 endpoint ID)

# API 基础地址（可选，使用自定义代理时填写）
LLM_BASE_URL=https://api.deepseek.com

# 摘要最大 token 数
SUMMARY_MAX_TOKENS=1024

# LLM 请求超时时间（秒）
LLM_REQUEST_TIMEOUT=60

# 摘要输出格式
SUMMARY_FORMAT=markdown

# Anthropic/Claude 专用配置
ANTHROPIC_VERSION=2023-06-01

# ========================================
# arXiv 论文过滤配置
# ========================================
# AI 相关类别白名单（逗号分隔）
ARXIV_ALLOWED_CATEGORIES=cs.AI,cs.LG,cs.CV,cs.CL,cs.RO,cs.IR,stat.ML,eess.AS

# 关键词过滤（逗号分隔，作为类别过滤的补充）
ARXIV_KEYWORDS=artificial intelligence,machine learning,deep learning,neural network,transformer

# 邮件回溯天数（包含当天，默认只处理当天邮件）
ARXIV_MAX_DAYS_BACK=1
